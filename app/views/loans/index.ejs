<%- include _breadcrumbs %>

<div class="page-header">
    <h1><%= t('loans.index') %></h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> ' + t('loans.new'), pathTo.new_loan(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <%if (loans.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th><%= t('loans.id') %></th>
                    <th><%= t('loans.value') %></th>
                    <th><%= t('loans.actions') %></th>
                </tr>
            </thead>
            <tbody>
                <% loans.forEach(function (loan) { %>
                <tr>
                    <td><strong><%- link_to('#' + loan.id, pathTo.loan(loan)) %></strong></td>
                    <td><%- t(['loans.in_currency', loan.value, 'â‚¬']) %></td>
                    <td><% _actions_button_class='btn-mini'%><%- include _actions %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong><%= t('loans.no_loans') %></strong>
        </p>
        <% } %>
    </div>
</div>
